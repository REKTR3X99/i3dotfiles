;Modules 

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %used%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}


[module/updates]
type = custom/script
interval = 200
exec =~/.config/scripts/updates.sh
format-underline = ${colors.walcolor}
tail = true
;label=%output%
label-font = 1


[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%


[module/GPU]
type=custom/script
interval = 2
exec = ~/.config/scripts/GPU.sh
format-underline = ${colors.walcolor}
tail = true
format-prefix="G:"
label-font = 1



[module/spotify]
type = custom/script
interval = 2
icon-play = "‚ô™ "
format-prefix = "‚ô™ "
format = <label>
exec = ~/.config/scripts/spotify.sh %artist% - %title%
tail = true
format-underline = ${colors.walcolor}


[module/openweathermap-forecast]
type = custom/script
exec = ~/.config/scripts/openweathermap-forecast.sh
interval = 600
label-font = 5
format-underline = ${colors.walcolor}


[module/bspwm]
type=internal/bspwm

format = <label-state> <label-mode>
index-sort=true
wrapping-scroll=false

pin-workspace = true
label-mode-padding=2

label-focused = %index%
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.workspace_focused}
label-focused-underline = ${colors.workspace_focused}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2
label-occupied-foreground = ${colors.workspace_unfocused}
label-occupied-background = ${colors.workspace_unfocused}

label-urgent = %index%!
label-urgend-background = ${colors.red}
label-urgent-foreground = ${colors.background}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 2

[module/i3]
type = internal/i3

format = <label-state> <label-mode>
index-sort=true
wrapping-scroll=false

pin-workspaces = true

